                TextReader reader = new StreamReader(firstFilePath);
                TextWriter writer = new StreamWriter(secondFilePath);
            }

            String buffer = "";
            while ((buffer = reader.ReadLine()) != null)
            {
                if (patternFinded == true)
                {
                    string text = buffer;
                    writer.WriteLine(reverseString(text));

                    patternFinded = false;
                }

